<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#ffffff">

 <ImageView
        android:id="@+id/personal_page_photograph"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop ="36dp"
        android:src="@drawable/personal_page_photograph" />

    <ImageView
        android:id="@+id/personal_page_set_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="319dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/personal_page_set_icon" />
   
    <RelativeLayout
        android:id="@+id/personal_page_user_name_gender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@id/personal_page_photograph"	
		android:layout_marginTop="12dp">
   
		    <TextView
		        android:id="@+id/personal_page_user_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:text="穿上平底鞋去流浪"
		        android:textColor="#2fb9c3"
		        android:textSize="17sp"
		        android:typeface="sans" />
		
		    <ImageView
		        android:id="@+id/personal_page_gender"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="4dp"
		        android:layout_toRightOf="@id/personal_page_user_name"
		        android:src="@drawable/girl_icon" />
		    
	</RelativeLayout>
	
    <TextView
		 android:id="@+id/personal_page_user_university"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:layout_below ="@id/personal_page_user_name_gender_layout"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="8dp"
		 android:text="鲁迅美术学院平面设计"
		 android:textColor="#676767"
		 android:textSize="15sp"
		 android:typeface="sans" />
    
	  <RelativeLayout
        android:id="@+id/personal_page_yellow_map_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@id/personal_page_user_university"	
		android:layout_marginTop="16dp">
		    
		    <ImageView
		        android:id="@+id/personal_page_yellow_map"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:src="@drawable/personal_page_yellow_map" />
		    
		    <TextView
		        android:id="@+id/personal_page_edit_or_follow"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:text="编辑"
		        android:textColor="#878787"
		        android:textSize="15sp"
		        android:typeface="sans" />
		    
		</RelativeLayout>
		
	  
		<!-- 编写个人主页中的操作卡(卡片/话题/关注/粉丝) -->
	  	<RelativeLayout
        android:id="@+id/personal_page_operate_layout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_below ="@id/personal_page_yellow_map_layout"	
		android:layout_marginTop="16dp"
		android:background="@drawable/frame_background">
		    
	  	    <RelativeLayout
		        android:id="@+id/personal_page_operate_card_number_layout"
		        android:layout_width="90dp"
		        android:layout_height="66dp"
	  	        android:layout_alignParentLeft="true"
	  	        android:layout_alignParentTop="true" >
	  	        
	  	        <TextView
	  	            android:id="@+id/personal_page_operate_text_card"
	  	            android:layout_width="wrap_content"
	  	            android:layout_height="wrap_content"
	  	            android:layout_centerHorizontal="true"
	  	            android:layout_alignParentTop="true" 
	  	            android:layout_marginTop="34dp"
	  	            android:text="卡片"
	  	            android:textColor="#676767"
	  	            android:textSize="14sp"
	  	            android:typeface="sans" />
	  	        
	  	        <TextView
	  	            android:id="@+id/personal_page_operate_text_card_number"
	  	            android:layout_width="wrap_content"
	  	            android:layout_height="wrap_content"
	  	            android:layout_centerHorizontal="true"
	  	            android:layout_alignParentTop="true" 
	  	            android:layout_marginTop="12dp"
	  	            android:text="38"
	  	            android:textColor="#626262"
	  	            android:textSize="14sp"
	  	            android:typeface="sans" 
	  	            android:textStyle="bold"/>
	  	        
	  	    </RelativeLayout>
	  	    
	  	    <RelativeLayout
		        android:id="@+id/personal_page_operate_topic_number_layout"
		        android:layout_width="90dp"
		        android:layout_height="66dp"
		        android:layout_toRightOf ="@id/personal_page_operate_card_number_layout">
	  	        
	  	        <TextView
	  	            android:id="@+id/personal_page_operate_text_topic"
	  	            android:layout_width="wrap_content"
	  	            android:layout_height="wrap_content"
	  	            android:layout_centerHorizontal="true"
	  	            android:layout_alignParentTop="true" 
	  	            android:layout_marginTop="34dp"
	  	            android:text="话题"
	  	            android:textColor="#676767"
	  	            android:textSize="14sp"
	  	            android:typeface="sans" />
	  	        
	  	        <TextView
	  	            android:id="@+id/personal_page_operate_text_topic_number"
	  	            android:layout_width="wrap_content"
	  	            android:layout_height="wrap_content"
	  	            android:layout_centerHorizontal="true"
	  	            android:layout_alignParentTop="true" 
	  	            android:layout_marginTop="12dp"
	  	            android:text="48"
	  	            android:textColor="#626262"
	  	            android:textSize="14sp"
	  	            android:typeface="sans" 
	  	            android:textStyle="bold"/>
	  	        
	  	    </RelativeLayout>
	  	    
	  	    <RelativeLayout
		        android:id="@+id/personal_page_operate_follow_number_layout"
		        android:layout_width="90dp"
		        android:layout_height="66dp"
		        android:layout_toRightOf ="@id/personal_page_operate_topic_number_layout">
	  	        
	  	        <TextView
	  	            android:id="@+id/personal_page_operate_text_follow"
	  	            android:layout_width="wrap_content"
	  	            android:layout_height="wrap_content"
	  	            android:layout_centerHorizontal="true"
	  	            android:layout_alignParentTop="true" 
	  	            android:layout_marginTop="34dp"
	  	            android:text="关注"
	  	            android:textColor="#676767"
	  	            android:textSize="14sp"
	  	            android:typeface="sans" />
	  	        
	  	        <TextView
	  	            android:id="@+id/personal_page_operate_text_follow_number"
	  	            android:layout_width="wrap_content"
	  	            android:layout_height="wrap_content"
	  	            android:layout_centerHorizontal="true"
	  	            android:layout_alignParentTop="true" 
	  	            android:layout_marginTop="12dp"
	  	            android:text="106"
	  	            android:textColor="#626262"
	  	            android:textSize="14sp"
	  	            android:typeface="sans" 
	  	            android:textStyle="bold"/>
	  	        
	  	    </RelativeLayout>

	  	    <RelativeLayout
	  	        android:id="@+id/personal_page_operate_fans_number_layout"
	  	        android:layout_width="90dp"
	  	        android:layout_height="66dp"
	  	        android:layout_toRightOf ="@id/personal_page_operate_follow_number_layout">
	  	        
	  	        <TextView
	  	            android:id="@+id/personal_page_operate_text_fans"
	  	            android:layout_width="wrap_content"
	  	            android:layout_height="wrap_content"
	  	            android:layout_centerHorizontal="true"
	  	            android:layout_alignParentTop="true" 
	  	            android:layout_marginTop="34dp"
	  	            android:text="粉丝"
	  	            android:textColor="#676767"
	  	            android:textSize="14sp"
	  	            android:typeface="sans" />
	  	        
	  	        <TextView
	  	            android:id="@+id/personal_page_operate_text_fans_number"
	  	            android:layout_width="wrap_content"
	  	            android:layout_height="wrap_content"
	  	            android:layout_centerHorizontal="true"
	  	            android:layout_alignParentTop="true" 
	  	            android:layout_marginTop="12dp"
	  	            android:text="587"
	  	            android:textColor="#626262"
	  	            android:textSize="14sp"
	  	            android:typeface="sans" 
	  	            android:textStyle="bold"/>
	  	        
	  	    </RelativeLayout>
	  	    
	  	</RelativeLayout>

</RelativeLayout>
